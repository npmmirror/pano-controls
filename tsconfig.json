{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "checkJs": false,
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es5",
    "strict": true,
    "paths": {
      "@Src/*": [ "src/*" ]
    }
  },
  "include": [ "src/**/*" ],
  "exclude": [
    "node_modules/**/*",
    "**/*.d.ts"
  ]
}